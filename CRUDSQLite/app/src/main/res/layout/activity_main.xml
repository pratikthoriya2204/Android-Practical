<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#D0B8F9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30sp"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRUD with SQLite"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#CB0FEB"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <EditText
        android:id="@+id/e_name"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:hint="Enter Name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:importantForAutofill="no"
        android:textColorHint="#5104DB"
        android:paddingLeft="25sp"
        android:textColor="#F30556"
        android:textSize="18sp"
        android:background="@drawable/input_back"/>
    <EditText
        android:id="@+id/e_phone"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:hint="Enter Number"
        android:inputType="number"
        android:importantForAutofill="no"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#5104DB"
        android:paddingLeft="25sp"
        android:textColor="#F30556"
        android:textSize="18sp"
        android:background="@drawable/input_back"/>
    <EditText
        android:id="@+id/e_email"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:hint="Enter Email"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:importantForAutofill="no"
        android:textColorHint="#5104DB"
        android:paddingLeft="25sp"
        android:textSize="18sp"
        android:textColor="#F30556"
        android:background="@drawable/input_back"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/b_insert"
        android:layout_width="180sp"
        android:layout_height="70sp"
        android:text="Insert"
        android:textSize="24sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50sp"
        android:background="@drawable/btn_back"/>
        <Button
            android:id="@+id/b_update"
            android:layout_width="180sp"
            android:layout_height="70sp"
            android:text="Update"
            android:textSize="24sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50sp"
            android:background="@drawable/btn_back"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/b_delete"
            android:layout_width="180sp"
            android:layout_height="70sp"
            android:text="Delete"
            android:textSize="24sp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/btn_back"/>
        <Button
            android:id="@+id/b_show"
            android:layout_width="180sp"
            android:layout_height="70sp"
            android:text="Show"
            android:textSize="24sp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/btn_back"/>
    </LinearLayout>

        <TableLayout
            android:id="@+id/tabView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="50sp"/>
    </LinearLayout>


</ScrollView>